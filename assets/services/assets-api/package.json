{
  "name": "@codefi-assets-and-payments/assets-api",
  "private": true,
  "version": "3.178.1",
  "description": "Assets API",
  "license": "Apache",
  "scripts": {
    "docs": "speccy serve ./api-spec.json",
    "docker": "docker-compose up --build",
    "docker:detached": "docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "lint-docs": "speccy lint --json-schema ./api-spec.json",
    "build-docs": "timeout 60 npm run start",
    "build": "nest build",
    "lint": "eslint . --ext ts --ext js",
    "prebuild": "rimraf dist",
    "prettier:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "release": "standard-version",
    "start:debug": "nest start --debug 0.0.0.0 --watch",
    "start:dev": "nest start --watch",
    "start": "nest start",
    "stop": "pkill dap-assets-api",
    "test:cov": "jest src test/functional --detectOpenHandles --runInBand --bail  --forceExit --coverage",
    "test:functional": "jest test/functional --detectOpenHandles --runInBand --verbose --forceExit",
    "test:functional:record": "RECORD=true jest test/functional --detectOpenHandles --runInBand --verbose --forceExit",
    "test:watch": "jest src --watch",
    "test": "jest src --b --runInBand --forceExit",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
    ]
  },
  "dependencies": {
    "@codefi-assets-and-payments/auth": "*",
    "@codefi-assets-and-payments/day-counter": "*",
    "@codefi-assets-and-payments/error-handler": "*",
    "@codefi-assets-and-payments/nestjs-orchestrate": "*",
    "@codefi-assets-and-payments/observability": "*",
    "@codefi-assets-and-payments/ts-types": "*",
    "@nestjs/axios": "^0.0.8",
    "@nestjs/common": "^8.4.7",
    "@nestjs/core": "^8.4.7",
    "@nestjs/platform-express": "^8.4.7",
    "@nestjs/swagger": "^5.2.1",
    "axios": "^0.27.2",
    "bignumber.js": "^9.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.1",
    "eth-lib": "^0.1.29",
    "express": "^4.18.1",
    "express-http-context": "^1.2.4",
    "form-data": "^4.0.0",
    "ioredis": "^5.1.0",
    "ioredis-cache": "^1.4.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "opentracing": "^0.14.7",
    "pegasys-orchestrate": "6.1.1",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^4.4.0",
    "uuid": "8.3.2",
    "web3-eth-accounts": "^1.7.4",
    "web3-utils": "^1.7.4",
    "xss": "^1.0.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.3",
    "@types/object-path": "^0.11.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^27.0.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-junit": "^14.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^13.0.3",
    "mock-express-request": "^0.2.2",
    "mocked-env": "^1.3.5",
    "nestjs-pino": "^2.6.0",
    "nock": "^13.2.8",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "speccy": "^0.11.0",
    "standard-version": "^9.5.0",
    "supertest": "^6.2.4",
    "ts-jest": "^27.0.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 18",
    "npm": ">= 8"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/test/setEnvVars.ts"
    ],
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageReporters": [
      "json",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
