{
  "name": "@codefi-assets-and-payments/tokens",
  "version": "2.1.0",
  "description": "A package to manage and interact with Ethereum tokens using Orchestrate",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "jest src",
    "test:cov": "jest src --ci --coverage",
    "prettier": "prettier --write '{src,apps,libs,test}/**/*.ts'",
    "prettier:check": "prettier --check '{src,apps,libs,test}/**/*.ts'",
    "lint": "eslint --cache '{src,apps,libs,test}/**/*.ts'",
    "lint:fix": "eslint --cache --fix '{src,apps,libs,test}/**/*.ts'",
    "release": "standard-version"
  },
  "license": "Apache",
  "dependencies": {
    "@codefi-assets-and-payments/nestjs-orchestrate": "*",
    "@codefi-assets-and-payments/observability": "*",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "bignumber.js": "^9.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^28.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "^28.0.3",
    "jest-create-mock-instance": "^2.0.0",
    "jest-junit": "^12.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.3.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^28.0.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setEnvVars.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/*.ts",
      "!**/*Module.ts"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "coverageDirectory": "./coverage",
    "testResultsProcessor": "jest-sonar-reporter",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run lint:fix --",
      "npm run prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  }
}
