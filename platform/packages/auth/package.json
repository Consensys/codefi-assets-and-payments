{
  "name": "@codefi-assets-and-payments/auth",
  "version": "2.0.1",
  "description": "Auth Codefi Package",
  "license": "Apache",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "jest src",
    "test:cov": "jest src --coverage",
    "prettier": "prettier --write '{src,apps,libs,test}/**/*.ts'",
    "prettier:check": "prettier --check '{src,apps,libs,test}/**/*.ts'",
    "lint": "eslint --cache '{src,apps,libs,test}/**/*.ts'",
    "lint:fix": "eslint --cache --fix '{src,apps,libs,test}/**/*.ts'",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-create-mock-instance": "^2.0.0",
    "jest-junit": "^12.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.3.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@codefi-assets-and-payments/error-handler": "*",
    "@codefi-assets-and-payments/observability": "*",
    "@nestjs/axios": "^0.0.8",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "axios-retry": "^3.2.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "ioredis": "^4.22.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.12.3",
    "jwt-decode": "^3.1.2",
    "reflect-metadata": "^0.1.13"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setEnvVars.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "rootDir": "./",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!**/*Module.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run lint:fix --",
      "npm run prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  }
}
