{
  "name": "@consensys/entity-api",
  "private": true,
  "version": "22.7.1",
  "description": "Entity Api",
  "license": "Apache",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "docs": "speccy serve ./api-spec.json",
    "lint-docs": "speccy lint --json-schema ./api-spec.json",
    "prettier": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "stop": "pkill --signal SIGINT entity-api",
    "start:dev": "nest start --debug 0.0.0.0:9229 --watch",
    "docker": "docker-compose up --build",
    "docker:detached": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "lint": "eslint --cache '{src,apps,libs,test}/**/*.ts'",
    "lint:fix": "eslint --cache --fix",
    "test": "jest src",
    "test:watch": "jest src --watch",
    "test:cov": "jest src --ci --coverage",
    "test:integration": "INTEGRATION_TEST=true jest integration --detectOpenHandles --runInBand --verbose --forceExit",
    "test:integration:tenant:get": "INTEGRATION_TEST=true jest integration/tenant.get.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:tenant:create": "INTEGRATION_TEST=true jest integration/tenant.create.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:tenant:update": "INTEGRATION_TEST=true jest integration/tenant.update.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:tenant:delete": "INTEGRATION_TEST=true jest integration/tenant.delete.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:tenant-client:get": "INTEGRATION_TEST=true jest integration/tenant-client.get.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:tenant-client:create": "INTEGRATION_TEST=true jest integration/tenant-client.create.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:entity:get": "INTEGRATION_TEST=true jest integration/entity.get.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:entity:create": "INTEGRATION_TEST=true jest integration/entity.create.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:entity:update": "INTEGRATION_TEST=true jest integration/entity.update.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:entity:delete": "INTEGRATION_TEST=true jest integration/entity.delete.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:entity-client:get": "INTEGRATION_TEST=true jest integration/entity-client.get.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:entity-client:create": "INTEGRATION_TEST=true jest integration/entity-client.create.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:wallet:get": "INTEGRATION_TEST=true jest integration/wallet.get.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:wallet:create": "INTEGRATION_TEST=true jest integration/wallet.create.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:wallet:update": "INTEGRATION_TEST=true jest integration/wallet.update.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:wallet:delete": "INTEGRATION_TEST=true jest integration/wallet.delete.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:consumer:user-created": "INTEGRATION_TEST=true jest integration/consumer.user-created.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:orchestrate:wallet": "INTEGRATION_TEST=true jest integration/orchestrate.wallet.integration.test --detectOpenHandles --runInBand --verbose --forceExit ",
    "test:integration:pipeline": "PIPELINE=true NODE_ENV=development jest integration --detectOpenHandles --verbose  --forceExit --runInBand",
    "test:load:base": "sh k6/run.sh",
    "test:load": "npm run test:load:base -- \\*",
    "test:load:endpoint": "npm run test:load:base -- \\*Endpoint",
    "test:load:endpoint:tenant:create": "npm run test:load:base -- createTenantEndpoint",
    "test:load:endpoint:tenant:update": "npm run test:load:base -- updateTenantEndpoint",
    "test:load:endpoint:tenant:delete": "npm run test:load:base -- deleteTenantEndpoint",
    "test:load:endpoint:entity:create": "npm run test:load:base -- createEntityEndpoint",
    "test:load:endpoint:entity:update": "npm run test:load:base -- updateEntityEndpoint",
    "test:load:endpoint:entity:delete": "npm run test:load:base -- deleteEntityEndpoint",
    "test:load:endpoint:wallet:create": "npm run test:load:base -- createWalletEndpoint",
    "test:load:endpoint:wallet:update": "npm run test:load:base -- updateWalletEndpoint",
    "test:load:endpoint:wallet:delete": "npm run test:load:base -- deleteWalletEndpoint",
    "test:load:kafka": "npm run test:load:base -- \\*Kafka",
    "test:load:kafka:tenant:create": "npm run test:load:base -- createTenantKafka",
    "test:load:kafka:tenant:update": "npm run test:load:base -- updateTenantKafka",
    "test:load:kafka:tenant:delete": "npm run test:load:base -- deleteTenantKafka",
    "test:load:kafka:entity:create": "npm run test:load:base -- createEntityKafka",
    "test:load:kafka:entity:update": "npm run test:load:base -- updateEntityKafka",
    "test:load:kafka:entity:delete": "npm run test:load:base -- deleteEntityKafka",
    "test:load:kafka:wallet:create": "npm run test:load:base -- createWalletKafka",
    "test:load:kafka:wallet:update": "npm run test:load:base -- updateWalletKafka",
    "test:load:kafka:wallet:delete": "npm run test:load:base -- deleteWalletKafka",
    "readiness:check": "PIPELINE=true ts-node integration/utils/readyCheck.ts",
    "release": "standard-version",
    "database:configure": "configure-database",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f ./src/ormconfig.ts",
    "typeorm:create": "npm run typeorm migration:create -- -n",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run -t=each",
    "typeorm:revert": "npm run typeorm migration:revert"
  },
  "dependencies": {
    "@consensys/auth": "workspace:*",
    "@consensys/configure-database": "workspace:*",
    "@consensys/error-handler": "workspace:*",
    "@consensys/messaging-events": "workspace:*",
    "@consensys/nestjs-messaging": "workspace:*",
    "@consensys/nestjs-orchestrate": "workspace:*",
    "@consensys/observability": "workspace:*",
    "@consensys/ts-types": "workspace:*",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/terminus": "^8.0.0",
    "@nestjs/typeorm": "~8.0.0",
    "dotenv": "^16.0.1",
    "joi": "^17.6.0",
    "kafkajs": "^1.16.0",
    "pg": "^8.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.4.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typeorm": "~0.2.45",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2",
    "web3-utils": "^1.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.15",
    "@types/node": "^18.0.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "axios": "^0.27.2",
    "axios-retry": "^3.2.5",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-create-mock-instance": "^2.0.0",
    "jest-junit": "^12.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.3.2",
    "speccy": "^0.11.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.3"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setEnvVars.ts"
    ],
    "globalSetup": "./integration/utils/globalSetup.ts",
    "globalTeardown": "./integration/utils/globalTeardown.ts",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "functions": 90,
        "lines": 95
      }
    },
    "rootDir": "./",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/dist/",
      "/coverage",
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/*/**/*.{ts,js}",
      "!src/**/{server,sleep}.{ts,js}",
      "!src/{validation,modules,guards,responses,requests,migration}/**",
      "!src/data/entities/**",
      "!src/data/dto/**",
      "!src/services/instances/**",
      "!src/services/PersistentConfigurationService.ts",
      "!src/migration/**"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix --",
      "npm run prettier"
    ]
  }
}
